<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/natural">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/date"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_staticX="33dp"
        tools:layout_editor_staticY="16dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:elevation="1dp"
        android:ems="100"
        android:hint="MONTH"
        android:inputType="number"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        tools:layout_editor_staticY="180dp"
        tools:layout_editor_staticX="180dp"
        android:layout_marginRight="90dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

   <EditText
        android:id="@+id/editText4"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:elevation="1dp"
        android:ems="100"
        android:hint="YEAR"
        android:inputType="number"
       android:textColor="@android:color/background_light"
       android:textColorHint="@android:color/background_light"
        tools:layout_editor_staticY="180dp"
        tools:layout_editor_staticX="180dp"
        android:layout_marginRight="90dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="onButtonClick"
        android:text="@string/enter"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:layout_marginTop="77dp"
        android:layout_marginRight="90dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="379dp"
        tools:layout_editor_absoluteX="92dp"
        app:layout_constraintTop_toBottomOf="@+id/e5"
        />

    <TextView
        android:id="@+id/e5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginRight="90dp"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPersonName"
        android:text=""
        android:textStyle="bold|italic"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textAlignment="center"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="323dp"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        />

</android.support.constraint.ConstraintLayout>
